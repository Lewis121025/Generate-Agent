# ------------------------------------------------------------------
# Core runtime configuration
# ------------------------------------------------------------------
APP_ENV=production
LOG_LEVEL=INFO

# ------------------------------------------------------------------
# Database & cache (Docker defaults point to internal services)
# ------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://lewis:lewis_pass@postgres:5432/lewis_db
REDIS_URL=redis://redis:6379/0
REDIS_ENABLED=true

# ------------------------------------------------------------------
# Vector database
# ------------------------------------------------------------------
VECTOR_DB_TYPE=weaviate
VECTOR_DB_URL=http://weaviate:8080
VECTOR_DB_API_KEY=

# ------------------------------------------------------------------
# Storage / artifacts
# ------------------------------------------------------------------
S3_BUCKET_NAME=lewis-artifacts
S3_REGION=us-east-1
S3_ENDPOINT_URL=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ------------------------------------------------------------------
# LLM & creative providers
# ------------------------------------------------------------------
LLM_PROVIDER_MODE=openrouter
OPENROUTER_API_KEY=
VIDEO_PROVIDER=runway
RUNWAY_API_KEY=
PIKA_API_KEY=
RUNWARE_API_KEY=
ELEVENLABS_API_KEY=

# Search / scraping / automation providers (optional)
TAVILY_API_KEY=
FIRECRAWL_API_KEY=
ZAPIER_NLA_API_KEY=

# Sandbox provider (optional E2B cloud execution)
E2B_API_KEY=

# ------------------------------------------------------------------
# Governance / limits / networking
# ------------------------------------------------------------------
SECRET_KEY=change_me_secret
API_KEY_SALT=change_me_salt
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
TRUSTED_HOSTS=localhost,127.0.0.1,lewis-api
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
SERVICE_API_KEYS=
HTTP_PROXY=
HTTPS_PROXY=
